      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "pricePerLaunch": {
      "type": "decimal"
    },
    "pricePerMonth": {
      "type": "decimal"
    },
    "description": {
      "type": "text"
    },
    "rating": {
      "type": "decimal"
    },
    "reviews": {
      "type": "integer"
    },
    "genre": {
      "type": "string"
    },
    "format": {
      "type": "string"
    },
    "duration": {
      "type": "string"
    },
    "author": {
      "type": "string"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "purchases": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::purchase.purchase",
      "mappedBy": "games"
    },
    "favourites": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::favourite.favourite",
